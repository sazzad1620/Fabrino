<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/white">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Item"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Item Name -->
        <EditText
            android:id="@+id/etItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Item Name"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp"/>

        <!-- Price -->
        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:inputType="numberDecimal"
            android:layout_marginBottom="12dp"/>

        <!-- Description -->
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:layout_marginBottom="12dp"/>

        <!-- Select Image Button (Optional) -->
        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvSelectedImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No image selected"
            android:textColor="#555555"
            android:layout_marginBottom="12dp"/>

        <!-- Category Spinner -->
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <!-- Sizes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Sizes"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/sizesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <CheckBox android:id="@+id/cbS" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="S"/>
            <CheckBox android:id="@+id/cbM" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="M"/>
            <CheckBox android:id="@+id/cbL" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="L"/>
            <CheckBox android:id="@+id/cbXL" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="XL"/>
            <CheckBox android:id="@+id/cb2XL" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2XL"/>
            <CheckBox android:id="@+id/cbFree" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Free Size"/>
        </LinearLayout>

        <!-- Quantity -->
        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:inputType="number"
            android:layout_marginBottom="12dp"/>

        <!-- Popular Checkbox -->
        <CheckBox
            android:id="@+id/cbAddPopular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add as Popular"
            android:checked="false"
            android:layout_marginTop="8dp"/>

        <!-- Update Button -->
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Item"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"/>

        <!-- Cancel Button -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
